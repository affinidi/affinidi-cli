#!/bin/bash

npm_config_global=$(npm config get global)
output=$(npm list -g --json @affinidi/cli)
mode="update" 
if [ $npm_config_global = "true" ]; then
    if [[$output =~ "@affinidi/cli"]]
    then
        echo "Command found: true" >> logs.txt
        mode="install" 
    fi    
echo "$mode" >> installaionMode.txt
fi