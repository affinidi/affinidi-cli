#!/bin/sh

output=$(affinidi)
mode="update"
npm_config_global=$(npm config get global)
echo "$output"
echo "$npm_config_global"
if [ $npm_config_global = "true" ]; then
    if [[ $output = "affinidi: command not found" ]]; then
        echo "Install"
        mode="install" 
    fi
echo "$mode" >> installaionMode.txt
fi

