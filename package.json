{
    "name": "@affinidi/affinidi-cli-js",
    "version": "0.0.1",
    "description": "Affinidi elemental command-line-interface",
    "author": "Denis Davidov denis.d@affinidi.com",
    "typings": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "semantic-release": "semantic-release",
        "build": "npm run tsc",
        "start": "npm run build && node dist/index.js",
        "tsc": "tsc -p tsconfig-build.json",
        "lint": "eslint src/*.ts src/**/*.ts",
        "lint:fix": "eslint src/*.ts src/**/*.ts test/**/*.ts --fix",
        "test": "npm run build && npm run lint && npm run test:only",
        "test:only": "NODE_ENV=test mocha -r ts-node/register test/unit/*.test.ts test/unit/**/*.test.ts -p ./tsconfig.json --timeout 55000 --exit",
        "test:integration": "npm run build && npm run lint && NODE_ENV=test mocha -r ts-node/register test/integration/*.test.ts test/integration/**/*.test.ts -p ./tsconfig.json --timeout 55000 --exit",
        "test:coverage": "NODE_ENV=test nyc --reporter=lcov mocha -r ts-node/register test/unit/index.ts -p ./tsconfig.json --timeout 55000 --exit",
        "checkLicenses": "license-checker --production --failOn 'AGPL 3.0;LGPL 2.1'",
        "prepare-commit-hooks": "npm install --global commitizen@4.2.4 cz-conventional-changelog@3.3.0 @commitlint/config-conventional@16.2.1 @commitlint/cli@16.2.3",
        "prepare:dev": "is-ci || (husky install && npm run prepare-commit-hooks)",
        "prepare": "node -e \"process.exit(process.env.NODE_ENV === 'production' ? 0 : 1)\" || npm run prepare:dev"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/affinidi/foundational/phoenix/affinidi-cli-js.git"
    },
    "keywords": [
        "affinidi"
    ],
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/affinidi/foundational/phoenix/affinidi-cli-js/issues"
    },
    "homepage": "https://gitlab.com/affinidi/foundational/phoenix/affinidi-cli-js#readme",
    "dependencies": {
        "@affinidi/common": "^2.1.1",
        "bluebird": "^3.7.2",
        "node-fetch": "^3.1.0",
        "ts-toolbelt": "^9.6.0"
    },
    "devDependencies": {
        "@affinidi/eslint-config": "2.0.0-beta.0",
        "@affinidi/prettier-config": "2.0.0-beta.0",
        "@affinidi/vc-data": "^1.1.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/gitlab": "^7.0.4",
        "@semantic-release/npm": "^9.0.1",
        "@types/chai": "4.2.12",
        "@types/mocha": "8.0.3",
        "@types/node": "13.13.16",
        "@types/node-fetch": "^2.5.8",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "chai": "4.2.0",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "is-ci": "^3.0.1",
        "license-checker": "25.0.1",
        "mocha": "^8.4.0",
        "nock": "^13.0.6",
        "nyc": "15.1.0",
        "prettier": "^2.1.2",
        "semantic-release": "^19.0.2",
        "ts-mockito": "^2.6.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3",
        "@semantic-release/exec": "^6.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "types": {
                "feat": {
                    "description": "A new feature (minor)",
                    "title": "Features"
                },
                "fix": {
                    "description": "A bug fix (patch)",
                    "title": "Bugs"
                },
                "perf": {
                    "description": "A change which improves performance (patch)",
                    "title": "Performance"
                },
                "chore": {
                    "description": "A CI change (no-release)",
                    "title": "CI"
                },
                "docs": {
                    "description": "A documentation change (no-release)",
                    "title": "Documentation"
                }
            }
        }
    }
}
