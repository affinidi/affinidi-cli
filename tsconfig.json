{
  "compilerOptions": {
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
